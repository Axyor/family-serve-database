{
    "name": "@axyor/family-serve-database",
    "version": "1.0.0",
    "description": "Database layer for Family Serve Delicious application",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Axyor/family-serve-delicious.git",
        "directory": "packages/database"
    },
    "publishConfig": {
        "registry": "https://npm.pkg.github.com"
    },
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "type": "module",
    "scripts": {
    "build": "tsc",
        "build:fixtures": "tsc -p ./docker/mongo-init/tsconfig.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
        "clean": "rimraf dist",
        "docker:up": "docker compose up -d",
        "docker:down": "docker compose down -v",
        "docker:test": "npm run docker:up && sleep 2 && npm test && npm run docker:down",
        "docker:show-data": "chmod +x ./docker/show-data.sh && ./docker/show-data.sh",
        "docker:restart": "npm run docker:down && npm run docker:up"
    },
    "keywords": [
        "mongodb",
        "database",
        "dietary-profiles"
    ],
    "author": "Axyor",
    "license": "ISC",
    "engines": {
        "node": ">=18"
    },
    "devDependencies": {
        "@types/jest": "^29.5.12",
        "@types/node": "^18.19.121",
        "jest": "^29.7.0",
        "mongoose": "^8.17.1",
        "rimraf": "^6.0.1",
        "ts-jest": "^29.1.2",
        "typescript": "^5.9.2"
    },
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "default": "./dist/index.js"
        }
    },
    "files": [
        "dist",
        "README.md"
    ]
}
