{
    "name": "@axyor/family-serve-database",
    "version": "2.1.0",
    "description": "Database layer for Family Serve Delicious application",
    "sideEffects": false,
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Axyor/family-serve-database.git"
    },
    "bugs": {
        "url": "https://github.com/Axyor/family-serve-database/issues"
    },
    "homepage": "https://github.com/Axyor/family-serve-database#readme",
    "scripts": {
        "build": "rimraf dist && tsc -p tsconfig.esm.json && tsc -p tsconfig.cjs.json && cp dist/esm/*.d.ts dist/cjs/ 2>/dev/null || true",
        "build:types": "tsc -p tsconfig.esm.json && cp dist/esm/*.d.ts dist/cjs/ 2>/dev/null || true",
        "build:fixtures": "tsc -p ./docker/mongo-init/tsconfig.json",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "clean": "rimraf dist",
        "prepublishOnly": "npm run clean && npm run build",
        "test:cjs-consume": "node test-cjs.cjs",
        "test:esm-consume": "node test-esm.mjs",
        "test:dual-consume": "npm run build && node test-cjs.cjs && node test-esm.mjs",
        "docker:up": "docker compose up -d",
        "docker:down": "docker compose down -v",
        "docker:test": "npm run docker:up && sleep 2 && npm test && npm run docker:down",
        "docker:show-data": "chmod +x ./docker/show-data.sh && ./docker/show-data.sh",
        "docker:restart": "npm run docker:down && npm run docker:up",
        "lint": "eslint 'src/**/*.ts'",
        "lint:fix": "eslint 'src/**/*.ts' --fix"
    },
    "lint-staged": {
        "*.ts": [
            "eslint --fix"
        ]
    },
    "keywords": [
        "mongodb",
        "database",
        "dietary-profiles"
    ],
    "author": "Axyor",
    "license": "AGPL-3.0-or-later",
    "engines": {
        "node": ">=18"
    },
    "dependencies": {
        "mongoose": "^8.17.1",
        "pino": "^9.3.2",
        "pino-pretty": "^11.2.2",
        "zod": "^3.23.8"
    },
    "devDependencies": {
        "@types/jest": "^29.5.12",
        "@types/node": "^18.19.121",
        "@typescript-eslint/eslint-plugin": "^8.3.0",
        "@typescript-eslint/parser": "^8.3.0",
        "eslint": "^9.9.0",
        "jest": "^29.7.0",
        "rimraf": "^6.0.1",
        "ts-jest": "^29.1.2",
        "typescript": "^5.9.2"
    },
    "main": "dist/cjs/index.js",
    "module": "dist/esm/index.js",
    "types": "dist/esm/index.d.ts",
    "exports": {
        ".": {
            "import": "./dist/esm/index.js",
            "require": "./dist/cjs/index.js",
            "types": "./dist/esm/index.d.ts"
        }
    },
    "files": [
        "dist",
        "README.md"
    ]
}